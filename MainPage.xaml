<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab03.MainPage"
             Title="JSON Manipulator">

    <Grid RowDefinitions="Auto, Auto, *, Auto" Padding="10" RowSpacing="10">
 
        <HorizontalStackLayout Grid.Row="0" Spacing="10">
            <Button Text="Відкрити JSON" Clicked="LoadBtn_Clicked"/>
            <Button Text="Зберегти JSON" Clicked="SaveBtn_Clicked"/>
            <Button Text="Про програму" Clicked="AboutBtn_Clicked" BackgroundColor="#512BD4"/>
        </HorizontalStackLayout>

        <Grid Grid.Row="1" ColumnDefinitions="*, *, *" ColumnSpacing="5">
            <Entry x:Name="FilterName" Placeholder="Пошук (ПІБ)" TextChanged="OnFilterChanged"/>
            <Entry x:Name="FilterFaculty" Grid.Column="1" Placeholder="Факультет" TextChanged="OnFilterChanged"/>
            <Entry x:Name="FilterCourse" Grid.Column="2" Placeholder="Курс" TextChanged="OnFilterChanged"/>
        </Grid>

        <Grid Grid.Row="2" RowDefinitions="30, *">
            <Grid Grid.Row="0" 
                  ColumnDefinitions="80, 2*, 60, 2*, 1.5*, 1.5*, 50, 60, 2*" 
                  BackgroundColor="LightGray"
                  Padding="5,0">

                <Label Grid.Column="0" Text="Статус" FontAttributes="Bold" VerticalOptions="Center" FontSize="12"/>
                <Label Grid.Column="1" Text="ПІБ" FontAttributes="Bold" VerticalOptions="Center" FontSize="12"/>
                <Label Grid.Column="2" Text="Кімн." FontAttributes="Bold" VerticalOptions="Center" FontSize="12"/>
                <Label Grid.Column="3" Text="Факультет" FontAttributes="Bold" VerticalOptions="Center" FontSize="12"/>
                <Label Grid.Column="4" Text="Спец." FontAttributes="Bold" VerticalOptions="Center" FontSize="12"/>
                <Label Grid.Column="5" Text="Кафедра" FontAttributes="Bold" VerticalOptions="Center" FontSize="12"/>
                <Label Grid.Column="6" Text="Курс" FontAttributes="Bold" VerticalOptions="Center" FontSize="12"/>
                <Label Grid.Column="7" Text="Стип." FontAttributes="Bold" VerticalOptions="Center" FontSize="12" ToolTipProperties.Text="Стипендія"/>
                <Label Grid.Column="8" Text="Адреса" FontAttributes="Bold" VerticalOptions="Center" FontSize="12"/>
            </Grid>

            <CollectionView Grid.Row="1" x:Name="StudentsList" SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="80, 2*, 60, 2*, 1.5*, 1.5*, 50, 60, 2*" 
                              Padding="5"
                              RowDefinitions="Auto">

                            <Label Grid.Column="0" Text="{Binding Status}" FontSize="11" VerticalOptions="Center" LineBreakMode="TailTruncation"/>

                            <Label Grid.Column="1" Text="{Binding FullName}" FontSize="12" FontAttributes="Bold" VerticalOptions="Center" LineBreakMode="TailTruncation"/>

                            <Label Grid.Column="2" Text="{Binding Room}" FontSize="11" HorizontalOptions="Center" VerticalOptions="Center"/>

                            <Label Grid.Column="3" Text="{Binding Faculty}" FontSize="11" VerticalOptions="Center" LineBreakMode="TailTruncation"/>

                            <Label Grid.Column="4" Text="{Binding Specialty}" FontSize="11" VerticalOptions="Center" LineBreakMode="TailTruncation"/>

                            <Label Grid.Column="5" Text="{Binding Chair}" FontSize="11" VerticalOptions="Center" LineBreakMode="TailTruncation"/>

                            <Label Grid.Column="6" Text="{Binding Course}" FontSize="12" HorizontalOptions="Center" VerticalOptions="Center"/>

                            <CheckBox Grid.Column="7" IsChecked="{Binding HasScholarship}" IsEnabled="False" HorizontalOptions="Center" VerticalOptions="Center"/>

                            <Label Grid.Column="8" Text="{Binding Address}" FontSize="11" VerticalOptions="Center" LineBreakMode="TailTruncation"/>

                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <HorizontalStackLayout Grid.Row="3" Spacing="10" HorizontalOptions="Center">
            <Button Text="Додати" Clicked="AddBtn_Clicked" BackgroundColor="Green"/>
            <Button Text="Редагувати" Clicked="EditBtn_Clicked" BackgroundColor="Orange"/>
            <Button Text="Видалити" Clicked="DeleteBtn_Clicked" BackgroundColor="Red"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>